	{insert_scripts files='jquery-1.7.2.min.js,kite_common.js'}
    <script type="text/javascript">
	$(document).ready(function(){
		var q_select=$(".select_boxs");
		for (var i=0;i<q_select.length;i++){
			q_select.eq(i).width(q_select.eq(i).find(".option").width());
		}
		$(".select_boxs").click(function(event){   
			event.stopPropagation();
			$(this).find(".option").toggle();
			$(this).parent().siblings().find(".option").hide();
		});
		$(document).click(function(event){
			var eo=$(event.target);
			if($(".select_boxs").is(":visible") && eo.attr("class")!="option" && !eo.parent(".option").length)
			$('.option').hide();									  
		});
		/*赋值给文本框*/
		$(".select_month .option a").click(function(){
			var value=$(this).text();
			$(this).parent().siblings(".select_txt").text(value);
			$("#select_value").val(value)
		})
		$(".select_bags .option a").click(function(){
			var value=$(this).text();
			$(this).parent().siblings(".select_txt").text(value);
			$("#select_value").val(value);
			if(value==1){
				$(".bags_span").text("pack");
			}else{
				$(".bags_span").text("packs");	
			}
			$(".enroll span").text((5.8*value).toFixed(2));
		})
		$(".select_month .option a").click(function(){
			var value=$(this).text();
			$(this).parent().siblings(".select_txt").text(value);
			$("#select_value").val(value);
			if(value==1){
				$(".month_span").text("month");
			}else{
				$(".month_span").text("months");	
			}
			
		})
		
		
	})
	
</script>
